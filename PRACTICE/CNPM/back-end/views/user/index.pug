extends ../layouts/common.pug

block content
  h1 USER


  table.table.table-bordered
    thead.thead-dark
      tr
        th(scope='col') #ID
        th(scope='col') User
        th(scope='col') Password
        th(scope='col') Operation
    each user in listUser
      tbody
        tr
          th(scope='row')= user._id
          td= user.user
          td= user.password
          td
            a.btn.btn-danger(href="/user/delete/" + user._id) Delete

  a.btn.btn-warning(href='/user/create') Create User 
  = " "
  a.btn.btn-primary(href='/user/login') Login User