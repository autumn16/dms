extends ../layouts/common.pug

block content
    h1 USER

    table.table
    thead.thead-dark
      tr
        th(scope='col') #ID
        th(scope='col') User
        th(scope='col') Password
    each user in listUser
      tbody
        tr
          th(scope='row')= user._id
          td= user.user
          td= user.password

    a.btn.btn-primary.btn-lg(href='/user/create') Create User
    a.btn.btn-primary.btn-lg(href='/user/login') Login User